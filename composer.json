{
    "name": "gpupo/cnova-sdk",
    "description": "SDK Não Oficial para integração a partir de aplicações PHP com as APIs da Cnova Marketplace",
    "keywords": ["cnova","extra", "pontofrio", "casasbahia", "sdk", "api"],
    "license": "MIT",
    "require": {
        "php": ">=5.4",
        "ext-curl" : "*",
        "gpupo/common-sdk": "~1.6"        
    },
    "suggest": {
        "monolog/monolog": "Write Log messages",
        "mockery/mockery": "0.9.*@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "monolog/monolog": "~1.12"
    },
    "autoload": {
        "psr-4": {
            "Gpupo\\CnovaSdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gpupo\\Tests\\CnovaSdk\\": "tests"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability" : "stable"
}
